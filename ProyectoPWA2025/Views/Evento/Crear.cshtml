@model ProyectoPWA2025.Models.EventoVM;
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Crear" asp-controller="Evento" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="oEvento.Id" />

            <div class="mb-2">
                <label class="form-label text-white" asp-for="oEvento.Nombre"></label>
                <input type="text" class="form-control form-control-sm" asp-for="oEvento.Nombre" />
            </div>
            <div class="mb-2">
                <label class="form-label text-white" asp-for="oEvento.Descripcion"></label>
                <input type="text" class="form-control form-control-sm" asp-for="oEvento.Descripcion" />
            </div>
            <div class="mb-2">
                <label class="form-label text-white" asp-for="oEvento.Fecha"></label>
                <input type="date" asp-format="{0:dd/MM/yyyy}" class="form-control form-control-sm" asp-for="oEvento.Fecha" />
            </div>
            <div class="mb-2">
                <label class="form-label text-white" asp-for="oEvento.Precio"></label>
                <input type="number" class="form-control form-control-sm" asp-for="oEvento.Precio" step="0.01" min="0"/>
            </div>
            <div class="mb-2">
                <label class="form-label text-white" asp-for="oEvento.Cupo"></label>
                <input type="number" class="form-control form-control-sm" asp-for="oEvento.Cupo"  min="0" />
            </div>
            <div class="mb-2">
                <label class="form-label text-white" asp-for="FotoPath">Foto</label>
                <input type="file" class="form-control" asp-for="FotoPath" />
            </div>
            <div class="mb-2">
                <button class="btn btn-secondary" type="submit">Crear</button>
                <a class="btn btn-info" asp-action="Index" asp-controller="Empleado">Volver</a>
            </div>
        </form>
    </div>
</div>


